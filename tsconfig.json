{
	"extends": "@marais/tsconfig",
	"compilerOptions": {
		"rootDir": "./",
		"baseUrl": ".",
		"outDir": "dist",
		"target": "ES2019",
		"declaration": false,
		"removeComments": false,
		"lib": ["DOM", "ESNext"],
		"paths": {
			"diary": ["src/index.ts"],
			"diary/*": ["src/*"]
		}
	},
	"include": ["src/*.ts"],
	"exclude": ["node_modules"]
}
